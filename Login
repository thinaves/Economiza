    <script>
        let clickCount = 0;
        let konamiCode = [];
        let konamiSequence = [
            'ArrowUp', 'ArrowUp', 'ArrowDown', 'ArrowDown', 
            'ArrowLeft', 'ArrowRight', 'ArrowLeft', 'ArrowRight', 
            'KeyB', 'KeyA'
        ];

        // Easter Egg 1: Cliques secretos no logo
        function secretClick() {
            clickCount++;
            document.getElementById('clickCount').textContent = clickCount;
            
            if (clickCount === 1) {
                document.getElementById('counter').style.display = 'block';
            }
            
            if (clickCount === 7) {
                showEasterEgg();
                createMoneyRain();
                resetCounter();
            }
            
            // Shake effect
            document.querySelector('.logo').classList.add('shake');
            setTimeout(() => {
                document.querySelector('.logo').classList.remove('shake');
            }, 500);
        }

        // Easter Egg 2: Konami Code
        document.addEventListener('keydown', function(e) {
            konamiCode.push(e.code);
            if (konamiCode.length > konamiSequence.length) {
                konamiCode.shift();
            }
            
            if (konamiCode.join('') === konamiSequence.join('')) {
                showEasterEgg();
                createMoneyRain();
                konamiCode = [];
            }
        });

        // Easter Egg 3: SequÃªncia secreta de digitaÃ§Ã£o
        let secretTyping = '';
        document.addEventListener('keypress', function(e) {
            secretTyping += e.key.toLowerCase();
            if (secretTyping.length > 9) {
                secretTyping = secretTyping.slice(-9);
            }
            
            if (secretTyping === 'economiza') {
                showEasterEgg();
                createMoneyRain();
                secretTyping = '';
            }
        });

        function showEasterEgg() {
            document.getElementById('easterEgg').style.display = 'flex';
            
            // Adiciona confetti effect
            setTimeout(() => {
                for (let i = 0; i < 50; i++) {
                    setTimeout(() => {
                        createConfetti();
                    }, i * 100);
                }
            }, 500);
        }

        function closeEasterEgg() {
            document.getElementById('easterEgg').style.display = 'none';
            document.getElementById('counter').style.display = 'none';
        }

        function resetCounter() {
            clickCount = 0;
            document.getElementById('clickCount').textContent = '0';
        }

        function createMoneyRain() {
            const symbols = ['ğŸ’°', 'ğŸ’µ', 'ğŸ’´', 'ğŸ’¶', 'ğŸ’·', 'ğŸª™', 'ğŸ’¸'];
            
            for (let i = 0; i < 15; i++) {
                setTimeout(() => {
                    const money = document.createElement('div');
                    money.className = 'money-rain';
                    money.textContent = symbols[Math.floor(Math.random() * symbols.length)];
                    money.style.left = Math.random() * 100 + '%';
                    money.style.animationDelay = Math.random() * 2 + 's';
                    document.body.appendChild(money);
                    
                    setTimeout(() => {
                        money.remove();
                    }, 3000);
                }, i * 200);
            }
        }

        function createConfetti() {
            const confetti = document.createElement('div');
            confetti.style.position = 'fixed';
            confetti.style.left = Math.random() * 100 + '%';
            confetti.style.top = '-10px';
            confetti.style.width = '10px';
            confetti.style.height = '10px';
            confetti.style.backgroundColor = ['#ff6b6b', '#4ecdc4', '#45b7d1', '#f9ca24', '#f0932b', '#eb4d4b', '#6c5ce7'][Math.floor(Math.random() * 7)];
            confetti.style.zIndex = '1001';
            confetti.style.animation = 'fall 3s linear';
            
            document.body.appendChild(confetti);
            
            setTimeout(() => {
                confetti.remove();
            }, 3000);
        }

        // Easter Egg 4: ComentÃ¡rio secreto no console
        console.log(`
        ğŸ‰ EASTER EGG DESCOBERTO NO CONSOLE! ğŸ‰
        
        OlÃ¡, dev curioso! ğŸ‘‹
        
        VocÃª encontrou um dos segredos do Economiza!
        
